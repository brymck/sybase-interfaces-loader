{
	"compilerOptions": {
    "baseUrl": ".",
		"declaration": true,
		"lib": ["es6"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"paths": {
			"@src/*": ["src/*"]
		},
		"rootDir": ".",
		"strict": true,
		"target": "es5",
		"types": ["node", "jasmine"]
	},
	"include": [
		"index.ts",
		"lib/**/*",
		"spec/**/*"
	]
}
